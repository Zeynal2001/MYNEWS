<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="container">
        <nav class="breadcrumb bg-transparent m-0 p-0">
            @{
            //TODO: Actionu aşağıda dinamik olacaq şəkildə göstər
            }
            <a asp-controller="Categories" asp-action="Index" class="bread">@Context.Request.Path.ToString().Replace("/Categories/CategoryNews", "Categories > ")</a>
            <a asp-controller="Categories" asp-action="CategoryNews" class="bread">@Context.Request.Path.ToString().Replace("/Categories/CategoryNews", "CategoryNews > ")</a>
            @{
                if (Model != null)
                {


                    <span class="breadcrumb-item active">@Model.CategoryName</span>

                    @*@cat.Name*@

                    <div class="btn-group ml-auto">
                        <button class="btn btn-secondary btn-sm dropdown-toggle btn-danger" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Subcategories
                        </button>
                        <div class="dropdown-menu">
                            @{
                                <h6 class="dropdown-header">@Model.CategoryName</h6>
                                <hr>
                                foreach (var item in Model.Subcategories)
                                {
                                    <a asp-action="SubcategoryNews" asp-route-categoryId="@item.Id" class="dropdown-item">@item.SubcategoryName</a>
                                }

                            }
                        </div>

                    </div>
                    //Html.RenderPartial()
                }
            }
        </nav>
    </div>
</div>
