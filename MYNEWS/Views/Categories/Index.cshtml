@model CategoryVm
@section CategoryCss{
    <link rel="stylesheet" href="~/css/category.css" />
}

<title>MYNEWS-@ViewData["title"]</title>

<div class="container">
    <nav class="breadcrumb bg-transparent m-0 p-0">
        <a asp-controller="Categories" asp-action="Index" class="bread"><span>@Context.Request.Path.ToString().Replace("/", "")</span></a>
    </nav>
    <div class="row d-flex justify-content-center">
        <div class="col-md-offset-4 col-md-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th class="thm">Subcategory</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model.Categories)
                            {
                                <tr>
                                    <td><a asp-action="CategoryNews" asp-route-categoryId="@item.Id" class="categorylink" style="color: black;">@item.Name</a></td>
                                    <td>
                                        <div class="btn-group dropright">
                                            <button type="button" class="btn btn-secondary btn-sm dropdown-toggle btn-danger" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Subcategories
                                            </button>
                                            <div class="dropdown-menu">
                                                <h6 class="dropdown-header">@item.Name</h6>
                                                <hr>
                                                @{
                                                    foreach (var sub in item.Subcategories)
                                                    {
                                                        <a asp-action="SubcategoryNews" asp-route-categoryId="@sub.Id" class="dropdown-item">@sub.Name</a>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }

                            <div class="row">
                                <div class="col-12">

                                    @if (Model.PageCount > 1)
                                    {
                                        <nav aria-label="Page navigation">
                                            <ul class="pagination justify-content-center">
                                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                                    <a asp-action="CategoryNews" asp-controller="Categories" asp-route-page="1" class="page-link" aria-label="Previous">
                                                        <span class="fa fa-angle-double-left" aria-hidden="true"></span>
                                                        <span class="sr-only">Previous</span>
                                                    </a>
                                                </li>

                                                @for (var i = 1; i <= Model.PageCount; i++)
                                                {
                                                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                                        <a asp-action="Index" asp-controller="Categories" asp-route-page="@i" class="page-link">@i</a>
                                                    </li>
                                                }

                                                <li class="page-item @(Model.CurrentPage == Model.PageCount ? "disabled" : "")">
                                                    <a asp-action="Index" asp-controller="Categories" asp-route-page="@(Model.PageCount)" class="page-link" aria-label="Next">
                                                        <span class="fa fa-angle-double-right" aria-hidden="true"></span>
                                                        <span class="sr-only">Next</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </nav>
                                    }
                                </div>
                            </div>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

