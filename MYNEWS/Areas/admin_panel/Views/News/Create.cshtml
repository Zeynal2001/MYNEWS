@model CreateNewsModel

<div class="">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div asp-validation-summary="All"></div>
            <h4 class="card-title">Create News</h4>
            <div class="">
                @* <div class="container mb-4">
                    <img src="" id="profile-image-show" width="200" height="200" />
                </div> *@
                <div class="container">
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        
                        <div class="form-group">
                            <label asp-for="Title" for="exampleInputTitle2">Title:</label>
                            <input asp-for="Title" type="text" class="form-control" id="exampleInputTitle2">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Content" for="exampleInputContent">Content:</label>
                            <textarea asp-for="Content" type="te" class="form-control" id="exampleInputContent"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ForTrending" class="form-label">For The Trending News Area:</label>
                            <input asp-for="ForTrending" class="form-control" type="file" id="formFile">
                        </div>

                        <div class="mb-3">
                            <label asp-for="SingleBig" class="form-label">For The News Details/Single Area:</label>
                            <input asp-for="SingleBig" class="form-control" type="file" id="formFile">
                        </div>

                        <div class="mb-3">
                            <label asp-for="ForFeatured" class="form-label">For The Featured Area:</label>
                            <input asp-for="ForFeatured" class="form-control" type="file" id="formFile">
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ForCategoriesAndSub" class="form-label">For The News per Categories page:</label>
                            <input asp-for="ForCategoriesAndSub" class="form-control" type="file" id="formFile">
                        </div>

                        <button type="submit" class="btn btn-primary me-2" style="color:honeydew;">Submit</button>
                        <button asp-action="GetAllNews" asp-controller="News" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section UserEditJs {
    <script src="~/admin/js/profile-edit2.js"></script>
}

